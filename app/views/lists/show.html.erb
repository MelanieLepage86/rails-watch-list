<div class="banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, crop: :fill %>')"
>
  <div class="banner-text">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-4">
  <div class="title d-flex justify-content-start align-items-center p-3">
    <%= link_to new_list_bookmark_path(@list) do %>
      <i class="fa-solid fa-square-plus p-3"></i>
    <% end %>
  </div>
  <div class="row justify-content-center g-4">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 d-flex justify-content-center">
        <div class="card rounded_lg" style="background-color: beige width: 18rem;">
          <div class="card-body">
            <h5 class="card-title font-weight-bold display-6"><%= bookmark.movie.title %></h5>

            <div class="mb-3">
              <%= image_tag bookmark.movie.poster_url, width: 200, class: "img-fluid rounded mx-auto d-block" %>
              <h6 class="mt-2"><%= bookmark.movie.rating %>/10 ‚≠ê</h6>
              <p><%= bookmark.movie.overview %></p>
              <small class="text-muted"><strong>Commentaire :</strong> <%= bookmark.comment %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
